<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>2302589_정다희</title>
 
  <style>
    
    body {
      font-family: Arial, sans-serif;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      background-color: #f4f4f4; 
      
    }

    .calculator {
      width: 250px;
      background-color: rgb(6, 6, 6);
      padding: 20px;
      border-radius: 20px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    #display {
      width: 100%;
      height: 50px;
      margin-bottom: 15px;
      text-align: right;
      font-size: 24px;
      padding: 5px;
      background: transparent; /* 배경 제거 */
      outline: none;           /* 클릭 시 외곽선 제거 */
      color: #e8e8e8;     
    }

    .buttons {
      display: grid;
      grid-template-columns: repeat(4, 1fr);
      gap: 12px;
    }

    button {
      width: 55px;
      height: 55px;
      font-size: 18px;
      border: none;
      background-color: #bcbcbc;
      border-radius: 50%; /* 동그란 버튼 */
      cursor: pointer;
      transition: background-color 0.2s;
    }

    button:hover {
      background-color: #ccc;
    }

    .f {
      background-color: #393939;
      color: white;
    }

    .second {
      background-color: #e37d00;
      color: white;
      border-radius: 8px; /* 네모 모양 (살짝 둥글게) */
    }

    button.zero {
      grid-column: span 1;
      border-radius: 30px; /* 0 버튼은 타원형 */
      width: 100%;
    }
    .equal {
      border-radius: 30px; /* 가로 타원형 */
      width: 100%;
      grid-column: span 2; /* 한 칸만 차지하게 */
}

  </style>
</head>
<body>
  <div class="calculator">
    <input type="text" id="display" disabled />
    <div class="buttons">
      <button onclick="clearDisplay()" class="f">C</button>
      <button onclick="toggleSign()" class="f">+/-</button>
      <button onclick="appendToDisplay('%')" class="f">%</button>
      <button onclick="appendToDisplay('/')" class="second">÷</button>

      <button onclick="appendToDisplay('7')">7</button>
      <button onclick="appendToDisplay('8')">8</button>
      <button onclick="appendToDisplay('9')">9</button>
      <button onclick="appendToDisplay('*')" class="second">*</button>

      <button onclick="appendToDisplay('4')">4</button>
      <button onclick="appendToDisplay('5')">5</button>
      <button onclick="appendToDisplay('6')">6</button>
      <button onclick="appendToDisplay('-')" class="second">-</button>

      <button onclick="appendToDisplay('1')">1</button>
      <button onclick="appendToDisplay('2')">2</button>
      <button onclick="appendToDisplay('3')">3</button>
      <button onclick="appendToDisplay('+')" class="second">+</button>

      
      <button onclick="appendToDisplay('.')">.</button>
      <button onclick="appendToDisplay('0')" class="zero">0</button>
      <button onclick="calculate()" class="second equal">=</button>

    </div>
  </div>

  <script>
    const display = document.getElementById("display");

    function appendToDisplay(value) {
      display.value += value;
    }

    function clearDisplay() {
      display.value = "";
    }

    function calculate() {
      try {
        display.value = eval(display.value);
      } catch (error) {
        display.value = "Error";
      }
    }

    function toggleSign() {
      if (display.value) {
        if (display.value.charAt(0) === '-') {
          display.value = display.value.slice(1);
        } else {
          display.value = '-' + display.value;
        }
      }
    }
  </script>
</body>
</html>
